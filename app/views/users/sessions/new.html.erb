<div class="container">
   <h1 class="well">Log In</h1>
   <div class="col-sm-12 well">
      <div class="row">
         <div class="col-sm-9 col-sm-offset-3">
            <div class="row">
               <div class="col-sm-9 form-group">
                  <br />
                  <%= button_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, class: 'btn btn-success btn-block' %><br />
                  <h3 class="text-center">Or</h3>
                  <br />
               </div>
            </div>
         </div>
         <%= form_for(resource, :as => :user, :url => session_path(:user), :html => { :role => 'form'}) do |f| %>
         <div class="col-sm-9 col-sm-offset-3">
            <div class="row">
               <div class="col-sm-9 form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, :class => "form-control", autofocus: true %>
               </div>
            </div>
            <div class="row">
               <div class="col-sm-9 form-group">
                  <%= f.label :password %><br />
                  <%= f.password_field :password, :class => "form-control", autocomplete: "off" %>
               </div>
            </div>
            <% if devise_mapping.rememberable? -%>
            <div class="field">
               <%= f.check_box :remember_me %>
               <%= f.label :remember_me %>
            </div>
            <% end -%>
            <div class="row">
               <div class="col-sm-9">
                  <%= f.submit "Log In", :class => "btn btn-info btn-block"%><br />
               </div>
            </div>
            <div class="row">
               <div class="col-sm-3 col-sm-offset-3">
                  <i>Not yet a member or forgot your password?</i><br /><br />
                  <%= link_to "Sign up", new_registration_path(resource_name), :class => "btn btn-success btn-block" %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "btn btn-danger btn-block" %><br />
               </div>
            </div>
         </div>
         <% end %>
      </div>
   </div>
</div>
