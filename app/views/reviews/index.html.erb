<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Ambiance</th>
      <th>Service</th>
      <th>Selection</th>
      <th>Food</th>
      <th>Value</th>
      <th>Date visited</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.ambiance %></td>
        <td><%= review.service %></td>
        <td><%= review.selection %></td>
        <td><%= review.food %></td>
        <td><%= review.value %></td>
        <td><%= review.date_visited %></td>
        <td><%= review.description %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

